{
  "name": "parcel-p-react-signals-typescript",
  "version": "1.0.0",
  "description": "Bun Parcel (P)ReactJS TypeScript quick starter project with GitHub Pages Actions for JS PoC quick start prototyping",
  "source": "src/index.html",
  "scripts": {
    "clean": "rimraf -rf dist .parcel-cache",
    "prebuild": "npm run clean",
    "preserve": "npm run clean",
    "github-pages": "npm run build -- --public-url=/parcel-starter/",
    "serve": "parcel serve --no-cache --no-source-maps",
    "build": "parcel build --no-cache --no-source-maps",
    "postbuild": "ncp src/favicon.ico dist/favicon.ico",
    "start": "pm2 start 'npm run serve' --name app",
    "restart": "pm2 restart app",
    "stop": "pm2 kill",
    "logs": "pm2 logs",
    "test": "jest src",
    "test:dev": "npm run test -- --watchAll",
    "dev": "parcel --no-cache --no-source-maps"
  },
  "keywords": [
    "parcel",
    "rimraf",
    "sass",
    "jest",
    "pm2",
    "tsx",
    "ts"
  ],
  "author": "Maksim Kostormin",
  "license": "MIT",
  "devDependencies": {
    "@parcel/transformer-sass": "2.11.0",
    "@types/jest": "29.5.11",
    "jest": "29.7.0",
    "ncp": "2.0.0",
    "parcel": "2.11.0",
    "pm2": "5.3.0",
    "process": "^0.11.10",
    "rimraf": "5.0.1",
    "scss": "0.2.4"
  },
  "dependencies": {
    "@preact/signals-react": "2.0.0",
    "@types/react-dom": "18.2.18",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "parcel": {
    "extends": "@parcel/config-default",
    "transformers": {
      "*.{ts,tsx}": ["@parcel/transformer-typescript-tsc"]
    }
  }
}
